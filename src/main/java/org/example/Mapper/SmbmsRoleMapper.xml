<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.smbms.mapper.SmbmsRoleMapper">

    <resultMap id="BaseResultMap" type="com.example.smbms.entity.SmbmsRole">
        <id property="id" column="id" />
        <result property="roleCode" column="roleCode" />
        <result property="roleName" column="roleName" />
        <result property="createdBy" column="createdBy" />
        <result property="creationDate" column="creationDate" />
        <result property="modifyBy" column="modifyBy" />
        <result property="modifyDate" column="modifyDate" />
    </resultMap>

    <!-- 插入 -->
    <insert id="insertRole" parameterType="com.example.smbms.entity.SmbmsRole" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO smbms_role
        (roleCode, roleName, createdBy, creationDate, modifyBy, modifyDate)
        VALUES
        (#{roleCode}, #{roleName}, #{createdBy}, #{creationDate}, #{modifyBy}, #{modifyDate})
    </insert>

    <!-- 删除 -->
    <delete id="deleteRoleById" parameterType="long">
        DELETE FROM smbms_role WHERE id = #{id}
    </delete>

    <!-- 更新 -->
    <update id="updateRole" parameterType="com.example.smbms.entity.SmbmsRole">
        UPDATE smbms_role
        SET
        roleCode = #{roleCode},
        roleName = #{roleName},
        createdBy = #{createdBy},
        creationDate = #{creationDate},
        modifyBy = #{modifyBy},
        modifyDate = #{modifyDate}
        WHERE id = #{id}
    </update>

    <!-- 查询单个 -->
    <select id="selectRoleById" parameterType="long" resultMap="BaseResultMap">
        SELECT * FROM smbms_role WHERE id = #{id}
    </select>

    <!-- 查询全部 -->
    <select id="selectAllRoles" resultMap="BaseResultMap">
        SELECT * FROM smbms_role
    </select>

</mapper>
